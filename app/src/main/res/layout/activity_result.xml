                        android:textSize="15sp"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text=" - Risky"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/fuelRisky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
