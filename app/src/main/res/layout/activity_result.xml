                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text=" - Risky"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/oxygenRisky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Speed Timings"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text=" - Good" />

                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/speedGood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text=" - Not Bad"/>

                    <TextView

                        android:layout_marginRight="10dp"
                        android:id="@+id/speedNotBad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text=" - Risky"/>

                    <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/speedRisky"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>

                </LinearLayout>

            </TableRow>

            <TableRow
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

